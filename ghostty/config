# Apparance
background-opacity = 0.95
theme = Argonaut
font-family = "monospace"
# font-family = "Nimbus Mono"

font-size = 11
cursor-style = block
cursor-style-blink = false

# multiplicator scroll
mouse-scroll-multiplier = 1


# Split screen 
keybind = ctrl+shift+down=new_split:down
keybind = ctrl+shift+right=new_split:right

# Close current screen terminal 
keybind = ctrl+shift+w=close_surface


# Equalize splits
keybind = ctrl+shift+plus=equalize_splits

# Next split screen 
keybind = ctrl+shift+p=goto_split:next

